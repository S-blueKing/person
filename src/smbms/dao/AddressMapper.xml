<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
       PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
       "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="smbms.dao.AddressMapper">

   <select id="getAddressById" resultType="smbms.pojo.Address">
       select
       `id` as `id`,
       `contact` as `contact`,
       `addressDesc` as `addressdesc`,
       `postCode` as `postcode`,
       `tel` as `tel`,
       `createdBy` as `createdby`,
       `creationDate` as `creationdate`,
       `modifyBy` as `modifyby`,
       `modifyDate` as `modifydate`,
       `userId` as `userid`
       from `smbms_address`
       <trim prefix="where" prefixOverrides="and | or">
           <if test="id != null">
               and `id`=#{id}
           </if>
       </trim>
   </select>

   <select id="getAddressListByMap" resultType="smbms.pojo.Address"
           parameterType="java.util.Map">
           select
           `id` as `id`,
           `contact` as `contact`,
           `addressDesc` as `addressdesc`,
           `postCode` as `postcode`,
           `tel` as `tel`,
           `createdBy` as `createdby`,
           `creationDate` as `creationdate`,
           `modifyBy` as `modifyby`,
           `modifyDate` as `modifydate`,
           `userId` as `userid`
           from `smbms_address`
       <trim prefix="where" prefixOverrides="and | or">
           <if test="id != null">
               and `id` = #{id} 
           </if>
           <if test="contact != null and contact!=''">
               and `contact` like CONCAT('%',#{contact},'%') 
           </if>
           <if test="addressDesc != null and addressdesc!=''">
               and `addressDesc` like CONCAT('%',#{addressDesc},'%') 
           </if>
           <if test="postCode != null and postcode!=''">
               and `postCode` like CONCAT('%',#{postCode},'%') 
           </if>
           <if test="tel != null and tel!=''">
               and `tel` like CONCAT('%',#{tel},'%') 
           </if>
           <if test="createdBy != null">
               and `createdBy` = #{createdBy} 
           </if>
           <if test="creationDate != null">
               and `creationDate` = #{creationDate} 
           </if>
           <if test="modifyBy != null">
               and `modifyBy` = #{modifyBy} 
           </if>
           <if test="modifyDate != null">
               and `modifyDate` = #{modifyDate} 
           </if>
           <if test="userId != null">
               and `userId` = #{userId} 
           </if>
       </trim>
   </select>
   
   <select id="getAddressRecordCount" resultType="int" parameterType="java.util.Map">
			select count(1) from `smbms_address`
		<trim prefix="where" prefixOverrides="and | or">
           <if test="id != null">
               and `id` = #{id} 
           </if>
           <if test="contact != null and contact!=''">
               and `contact` like CONCAT('%',#{contact},'%') 
           </if>
           <if test="addressDesc != null and addressdesc!=''">
               and `addressDesc` like CONCAT('%',#{addressDesc},'%') 
           </if>
           <if test="postCode != null and postcode!=''">
               and `postCode` like CONCAT('%',#{postCode},'%') 
           </if>
           <if test="tel != null and tel!=''">
               and `tel` like CONCAT('%',#{tel},'%') 
           </if>
           <if test="createdBy != null">
               and `createdBy` = #{createdBy} 
           </if>
           <if test="creationDate != null">
               and `creationDate` = #{creationDate} 
           </if>
           <if test="modifyBy != null">
               and `modifyBy` = #{modifyBy} 
           </if>
           <if test="modifyDate != null">
               and `modifyDate` = #{modifyDate} 
           </if>
           <if test="userId != null">
               and `userId` = #{userId} 
           </if>
       </trim>
   </select>

   <insert id="insertAddress" parameterType="smbms.pojo.Address">
       insert into `smbms_address`(
              		`contact`,
              		`addressDesc`,
              		`postCode`,
              		`tel`,
              		`createdBy`,
              		`creationDate`,
              		`modifyBy`,
              		`modifyDate`,
              		`userId`
       )
       values(
              		#{contact},
              		#{addressdesc},
              		#{postcode},
              		#{tel},
              		#{createdby},
              		#{creationdate},
              		#{modifyby},
              		#{modifydate},
              		#{userid}
       )
   </insert>

   <update id="updateAddress" parameterType="smbms.pojo.Address">
       update `smbms_address`
       <trim prefix="set" suffixOverrides="," suffix="where `id`=#{id}">
           <if test="contact != null and contact!=''">       
               `contact`=#{contact},
           </if>
           <if test="addressdesc != null and addressdesc!=''">       
               `addressDesc`=#{addressdesc},
           </if>
           <if test="postcode != null and postcode!=''">       
               `postCode`=#{postcode},
           </if>
           <if test="tel != null and tel!=''">       
               `tel`=#{tel},
           </if>
           <if test="createdby != null">       
               `createdBy`=#{createdby},
           </if>
           <if test="creationdate != null">       
               `creationDate`=#{creationdate},
           </if>
           <if test="modifyby != null">       
               `modifyBy`=#{modifyby},
           </if>
           <if test="modifydate != null">       
               `modifyDate`=#{modifydate},
           </if>
           <if test="userid != null">       
               `userId`=#{userid}
           </if>
       </trim>
   </update>

   <delete id="deleteAddressById" parameterType="Integer">
       delete from `smbms_address` where `id` = #{id}
   </delete>
</mapper>